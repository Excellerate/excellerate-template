<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site">
  <name>Excellerate Services Template</name>
  <version>1.0</version>
  <creationDate>01/07/2015</creationDate>
  <author>CodeChap</author>
  <authorEmail>hello@codechap.com</authorEmail>
  <authorUrl>http://codechap.com</authorUrl>
  <copyright>Copyright (C) 2015 Excellerate Pty Ltd</copyright>
  <description>Group template for Excellerate group companies.</description>
  <files>
    <folder>assets</folder>
    <folder>html</folder>
    <folder>parts</folder>
    <filename>index.php</filename>
    <filename>favicon.ico</filename>
    <filename>template_preview.png</filename>
    <filename>template_thumbnail.png</filename>
  </files>
  <positions>
        <position>debug</position>
        <position>slider</position>
        <position>menu</position>
        <position>newsflash_a</position>
        <position>newsflash_b</position>
        <position>newsflash_c</position>
        <position>newsflash_d</position>
        <position>newsflash_e</position>
        <position>right</position>
        <position>left</position>
        <position>top_a</position>
        <position>top_b</position>
        <position>top_c</position>
        <position>top_d</position>
        <position>top_e</position>
        <position>card_a</position>
        <position>card_b</position>
        <position>card_c</position>
        <position>card_d</position>
        <position>card_e</position>
        <position>card_f</position>
        <position>bottom_a</position>
        <position>bottom_b</position>
        <position>bottom_c</position>
        <position>bottom_d</position>
        <position>bottom_e</position>
        <position>bottom_f</position>
        <position>bottom_g</position>
        <position>bottom_h</position>
        <position>bottom_i</position>
        <position>bottom_j</position>
        <position>bottom_k</position>
        <position>footer_a</position>
        <position>footer_b</position>
        <position>footer_c</position>
        <position>footer_d</position>
        <position>footer_e</position>
        <position>top_left</position>
        <position>top_right</position>
        <position>bottom_left</position>
        <position>bottom_right</position>
        <position>splash</position>
        <position>subsites</position>
        <position>under_content</position>
  </positions>
  <config>
    <fields name="params">
      <fieldset name="advanced">

        <field name="company"  type="text" default="" label="Full company name" description="Enter full name of the group company" filter="string" />
        
        <field name="brand"  type="text" default="" label="brand name" description="Logos must match this value" filter="string" />

        <field name="siteSlogan"  type="textarea" default="" label="Company Slogan" description="Holding company slogan" filter="raw" />
        
        <field name="siteNumber"  type="text" default="" label="Phone number" description="Holding company number" filter="string" />

        <field name="style"
          type="radio"
          label="Style"
          description="Colour style"
        >
          <option value="white">None</option>
          <option value="teal">Aqua</option>
          <option value="blue">Blue</option>
          <option value="green">Green</option>
          <option value="navy">Navy</option>
          <option value="orange">Orange</option>
          <option value="red">Red</option>
          <option value="purple">Purple</option>
        </field>

        <field name="branding"
          type="radio"
          label="Branding Bar"
          description="Top colour bar"
        >
          <option value="yes">Show</option>
          <option value="no">Hide</option>
        </field>

        <field name="subsites"
          type="radio"
          label="Show subsites position"
          description="Removes the telephone number and loads the subsites module position"
        >
          <option value="no">Hide &amp; show number</option>
          <option value="yes">Show &amp; hide number</option>
        </field>

        <field name="home"
          type="radio"
          label="Show home page link"
          description="Top colour bar"
        >
          <option value="yes">Show</option>
          <option value="no">Hide</option>
        </field>

        <field name="analytics"  type="string" default="" label="Google Analytics Code" description="Your analytics tracking ID" filter="raw" />
        <field name="addthiscode"  type="string" default="" label="Addthis Code" description="Your addthis tracking ID" filter="raw" />

      </fieldset>

      <fieldset name="social" label="Social">
        <field name="facebook"  type="url" default="" label="Facebook page" description="Link to Facebook" filter="url" />
        <field name="twitter"  type="url" default="" label="Twitter page" description="Link to Twitter" filter="url" />
        <field name="linkedin"  type="url" default="" label="LinkedIn page" description="Link to Linked In" filter="url" />
        <field name="pinterest"  type="url" default="" label="Pinterest page" description="Link to Pinterest" filter="url" />
        <field name="googlePlus"  type="url" default="" label="Google Plus page" description="Link to Google Plus" filter="url" />
      </fieldset>

    </fields>
  </config>
</extension>